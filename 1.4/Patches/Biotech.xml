<?xml version="1.0" encoding="UTF-8" ?>

<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/GeneDef[defName="WoundHealing_SuperFast"]/biostatMet</xpath>
        <value>
            <biostatMet>-4</biostatMet>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/GeneDef[defName="Superclotting"]/biostatMet</xpath>
        <value>
            <biostatMet>-3</biostatMet>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/GeneDef[defName="PsychicAbility_Dull"]/biostatMet</xpath>
        <value>
            <biostatMet>-1</biostatMet>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/GeneDef[defName="PsychicAbility_Deaf"]/biostatMet</xpath>
        <value>
            <biostatMet>-2</biostatMet>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/GeneDef[defName="Aggression_DeadCalm"]/biostatMet</xpath>
        <value>
            <biostatMet>-3</biostatMet>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/GeneDef[defName="Aggression_DeadCalm"]</xpath>
        <value>
            <forcedTraits>
                <li>
                    <def>Nerves</def>
                    <degree>2</degree>
                </li>
            </forcedTraits>
        </value>
    </Operation>
    
    <!-- Ageless exclusion -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/GeneDef[defName="Ageless]/exclusionTags</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/GeneDef[defName="Ageless"]</xpath>
            <value>
                <exclusionTags>
                    <li>Turn_Exclusion_Ageless</li>
                </exclusionTags>
            </value>
        </nomatch>

        <match Class="PatchOperationAdd">
            <xpath>Defs/GeneDef[defName="Ageless"]/exclusionTags</xpath>
            <value>
                <li>Turn_Exclusion_Ageless</li>
            </value>
        </match>
    </Operation>

    <!-- Deathless exclusion -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/GeneDef[defName="Deathless]/exclusionTags</xpath>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/GeneDef[defName="Deathless"]</xpath>
            <value>
                <exclusionTags>
                    <li>Turn_Exclusion_Deathless</li>
                </exclusionTags>
            </value>
        </nomatch>
        
        <match Class="PatchOperationAdd">
            <xpath>Defs/GeneDef[defName="Deathless"]/exclusionTags</xpath>
            <value>
                <li>Turn_Exclusion_Deathless</li>
            </value>
        </match>
    </Operation>

</Patch>