<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <GeneDef>
        <defName>AG_DeathGuidance</defName>
        <label>guidance of the dead</label>
        <description>Carriers of this gene are able to sustain a Hades-type hivemind, allowing them to absorb skills of their dead comrades.</description>
        <iconPath>UI/Icons/Genes/Gene_DeathGuidance</iconPath>
        <displayCategory>Hiveminds</displayCategory>
        <biostatMet>-6</biostatMet>
		<biostatCpx>4</biostatCpx>
        <exclusionTags>
            <li>AG_Exclusion_Deathless</li>
            <li>AG_Exclusion_Hivemind</li>
        </exclusionTags>
        <customEffectDescriptions>
            <li>When a carrier of this gene dies, all other carriers linked to the same hivemind will partially recieve their skills.</li>
        </customEffectDescriptions>
        <symbolPack>
            <prefixSymbols>
                <li><symbol>hades</symbol></li>
                <li><symbol>death</symbol></li>
                <li><symbol>ripper</symbol></li>
                <li><symbol>hiver</symbol></li>
                <li><symbol>devour</symbol></li>
            </prefixSymbols>
            <suffixSymbols>
                <li><symbol>hive</symbol></li>
                <li><symbol>steal</symbol></li>
            </suffixSymbols>
        </symbolPack>

		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<hediffToWholeBody>Hediff_DeathGuidance</hediffToWholeBody>
			</li>
		</modExtensions>
    </GeneDef>
</Defs>